{
  "name": "codebase-time-machine",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "dev-full": "concurrently \"npx convex dev\" \"next dev --turbo\"",
    "dev-bg": "concurrently \"npx convex dev &\" \"next dev --turbo &\"",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "setup-convex": "npx convex dev --until-success && npx convex dev --once",
    "test-integration": "node tests/runner.js",
    "ci-check": "concurrently \"npm run lint\" \"npm run test-integration\""
  },
  "dependencies": {
    "next": "^15.4.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "convex": "^1.19.2",
    "tailwindcss": "^3.4.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "tailwind-merge": "^2.0.0",
    "lucide-react": "^0.263.1",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@radix-ui/react-progress": "^1.0.3",
    "recharts": "^2.10.4",
    "date-fns": "^3.6.0",
    "react-hook-form": "^7.47.0",
    "@hookform/resolvers": "^3.3.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "typescript": "^5.9.2",
    "@types/node": "^20.19.10",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "eslint": "^9.33.0",
    "eslint-config-next": "^15.4.6",
    "@typescript-eslint/parser": "^8.39.1",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "concurrently": "^8.0.0",
    "playwright": "^1.54.2",
    "postcss": "^8.5.6",
    "autoprefixer": "^10.4.21"
  }
}